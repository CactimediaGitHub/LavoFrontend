  {{#if icon}}  
  <i class="lavo-icon-{{icon}} icon"></i>{{/if}}
  <div class="content">    
    {{#if label}}
      {{label}}
      <div>
        {{#if fullAddress}}
          {{fullAddress}}
        {{/if}}
      </div>
  
    {{else}}
      {{yield}}
    {{/if}}
  </div>
  </div>
  <div class="ui checkbox {{if isActive "checked"}}">
